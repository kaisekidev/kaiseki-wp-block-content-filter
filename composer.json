{
  "name": "kaiseki/wp-block-content-filter",
  "type": "library",
  "description": "",
  "keywords": [
    "wordpress",
    "module"
  ],
  "license": "proprietary",
  "homepage": "https://github.com/kaisekidev/kaiseki-wp-block-content-filter",
  "authors": [
    {
      "name": "Kaiseki",
      "email": "hello@kaiseki.dev",
      "homepage": "https://www.kaiseki.dev",
      "role": "Organization"
    },
    {
      "name": "David Mondok",
      "email": "david@woda.at",
      "homepage": "https://github.com/davidmondok",
      "role": "Developer"
    },
    {
      "name": "Wolfgang Schaefer",
      "email": "wolfgang@woda.at",
      "homepage": "https://github.com/wolfgangschaefer",
      "role": "Developer"
    }
  ],
  "support": {
    "issues": "https://github.com/kaisekidev/kaiseki-wp-block-content-filter/issues",
    "source": "https://github.com/kaisekidev/kaiseki-wp-block-content-filter"
  },
  "require": {
    "php": "^8.1",
    "kaiseki/config": "dev-master",
    "kaiseki/wp-hook": "dev-master",
    "masterminds/html5": "^2.0",
    "psr/container": "^1.1",
    "thecodingmachine/safe": "^1.3"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.21",
    "kaiseki/php-coding-standard": "dev-master",
    "maglnet/composer-require-checker": "^3.5",
    "php-stubs/wordpress-stubs": "^6.2",
    "phpstan/extension-installer": "^1.3",
    "phpstan/phpstan": "^1.2",
    "phpstan/phpstan-phpunit": "^1.0",
    "phpstan/phpstan-strict-rules": "^1.1",
    "phpunit/phpunit": "^9.5",
    "roave/security-advisories": "dev-latest",
    "roots/wordpress-core-installer": "*",
    "roots/wordpress-no-content": "@stable",
    "squizlabs/php_codesniffer": "^3.7.1",
    "szepeviktor/phpstan-wordpress": "^1.3",
    "thecodingmachine/phpstan-safe-rule": "^1.1"
  },
  "autoload": {
    "psr-4": {
      "Kaiseki\\WordPress\\BlockContentFilter\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Kaiseki\\Test\\Functional\\WordPress\\BlockContentFilter\\": "tests/functional",
      "Kaiseki\\Test\\Unit\\WordPress\\BlockContentFilter\\": "tests/unit"
    }
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "phpstan/extension-installer": true,
      "roots/wordpress-core-installer": true,
      "composer/installers": true
    },
    "process-timeout": 0
  },
  "repositories": [
    {      "type": "composer",
      "url": "https://wpackagist.org",
      "only": [
        "wpackagist-plugin/*"
      ]
    }
  ],
  "minimum-stability": "stable",
  "extra": {
    "wordpress-install-dir": "vendor/wordpress/wordpress",
    "installer-paths": {
      "vendor/wordpress/plugins/{$name}/": [
        "type:wordpress-plugin"
      ]
    }
  },
  "scripts": {
    "check": [
      "@cs-check",
      "@phpstan"
    ],
    "fix": [
      "@cs-fix",
      "@cs-fixer"
    ],
    "check-deps": "vendor/bin/composer-require-checker --config-file=require-checker.config.json",
    "cs-check": "vendor/bin/phpcs -s",
    "cs-fix": "vendor/bin/phpcbf",
    "cs-fixer": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.php",
    "phpstan": "vendor/bin/phpstan analyse --memory-limit 1G",
    "phpstan-pro": "vendor/bin/phpstan analyse --pro --memory-limit 1G",
    "phpunit": "vendor/bin/phpunit"
  }
}
